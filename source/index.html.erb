<% content_for :head do %> 
	<title><%= data.config.site.title %></title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Always force latest IE rendering engine (even in intranet) & Chrome Frame -->
	<meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
	<link rel="canonical" href="<%= get_site_url %>">
	<meta name="description" content="<%= data.config.site.description %>">
	<meta name="keywords" content="project, boilerplate">
	<%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Petit+Formal+Script|Josefin+Slab:300,400" %>
	<%= stylesheet_link_tag "site.css" %>
	<!--[if IE]>
	<link rel="stylesheet" type="text/css" href="/stylesheets/ie_only.css" />
	<![endif]-->
	<%= partial "app/partials/util/environment-type" %>
	<%= partial "app/partials/util/debug-flag" %>
	<%= partial "app/partials/util/build-version" %>
	<%= partial "app/partials/util/unique-session" %>
	<%= partial "app/partials/util/cache-buster" %>
<% end %>

<%= partial "app/partials/views/structure/overlay" %>

<div id="wrapper">
	<%= partial "app/partials/views/structure/header" %>
	<%= partial "app/partials/views/structure/main" %>
	<%= partial "app/partials/views/structure/footer" %>
<div>

<%= partial "app/partials/views/template/menu" %>
